{
  "__comments": {
    "path": "Its a fhir path, for syntax refer to https://www.hl7.org/fhir/fhirpath.html",
    "type": "String, Date, Number or Boolean",
    "threshold": {
      "levenshtein": "Lower the number, the closer the match, 0 being exact match",
      "jaro-winkler": "number between 0 and 1, where 0 for no match and 1 for exact match"
    },
    "supported_algorithms": {
      "mediator": [
        "levenshtein",
        "damerau-levenshtein",
        "jaro-winkler",
        "soundex",
        "metaphone",
        "double-metaphone",
        "exact"
      ],
      "elasticsearch": [
        "levenshtein",
        "damerau-levenshtein",
        "phonetic"
      ]
    }
  },
  "blocking": {

  },
  "rules": [{
    "fields": {
      "birthDate": {
        "algorithm": "exact",
        "threshold": 2,
        "fhirpath": "birthDate",
        "espath": "birthDate",
        "type": "String"
      },
      "gender": {
        "algorithm": "exact",
        "threshold": 2,
        "fhirpath": "gender",
        "espath": "gender",
        "systems": ["system1", "system2", "system3"]
      },
      "artNumber": {
        "algorithm": "exact",
        "threshold": 2,
        "fhirpath": "identifier.where(system='http://health.go.ug/cr/artnumber').value",
        "espath": "artNumber",
        "systems": ["system1", "system2", "system3"]
      }
    },
    "filters": {}
  }]
}