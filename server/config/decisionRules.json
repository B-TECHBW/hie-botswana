{
  "__comments": {
    "path": "Its a fhir path, for syntax refer to https://www.hl7.org/fhir/fhirpath.html",
    "type": "String, Date, Number or Boolean",
    "threshold": {
      "levenshtein": "Lower the number, the closer the match, 0 being exact match",
      "jaro-winkler": "number between 0 and 1, where 0 for no match and 1 for exact match"
    },
    "supported_algorithms": {
      "mediator": [
        "levenshtein",
        "damerau-levenshtein",
        "jaro-winkler",
        "soundex",
        "metaphone",
        "double-metaphone",
        "exact"
      ],
      "elasticsearch": [
        "levenshtein",
        "damerau-levenshtein",
        "phonetic"
      ]
    }
  },
  "blocking": {

  },
  "rules": [{
    "fields": {
      "given": {
        "algorithm": "damerau-levenshtein",
        "threshold": 2,
        "weight": 2,
        "uValue": 20,
        "mValue": -2,
        "fhirpath": "name.where(use='official').given",
        "espath": "given",
        "type": "String"
      },
      "family": {
        "algorithm": "damerau-levenshtein",
        "threshold": 2,
        "weight": 3,
        "uValue": 10,
        "mValue": -4,
        "fhirpath": "name.where(use='official').family",
        "espath": "family",
        "type": "String"
      },
      "phone": {
        "algorithm": "exact",
        "threshold": 2,
        "weight": 3,
        "uValue": 5,
        "mValue": -8,
        "fhirpath": "telecom.where(system='phone').value",
        "espath": "phone"
      }
    },
    "threshold": 0,
    "filters": {
      "gender": {
        "algorithm": "exact",
        "threshold": 2,
        "fhirpath": "gender",
        "espath": "gender"
      }
    }
  }]
}